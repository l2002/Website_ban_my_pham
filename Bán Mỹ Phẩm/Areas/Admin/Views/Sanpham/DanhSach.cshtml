@model PagedList.IPagedList<Bán_Mỹ_Phẩm.Models.Sanpham>
@using PagedList.Mvc;

@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutPage-Admin.cshtml";
}

<title>SẢN PHẨM</title>
<p>
    <button class="btn-default">@Html.ActionLink("Thêm mới", "Create")</button>
</p>

                <div class="container-fluid">
                    <!-- DataTales Example -->
                    <div class="card shadow mb-4">
                        <div class="card-header py-3">
                            <h6 class="m-0 font-weight-bold text-primary">QUẢN LÝ SẢN PHẨM</h6>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                    <thead>
                                        <tr>
                                            <th>Mã SP</th>
                                            <th>Tên SP</th>
                                            <th>Giá tiền</th>
                                            <th>Số lượng</th>
                                            <th>Hình ảnh</th>
                                            <th>Tên thương hiệu</th>
                                            <th>Hành động</th>
                                        </tr>
                                    </thead>
                                    <tfoot>
                                        <tr>
                                            <th>Mã sản phẩm</th>
                                            <th>Tên sản phẩm</th>
                                            <th>Giá tiền</th>
                                            <th>Số lượng</th>
                                            <th>Hình ảnh</th>
                                            <th>Tên thương hiệu</th>
                                            <th>Hành động</th>
                                        </tr>
                                    </tfoot>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Masp)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Tensp)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Giatien)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Soluong)
                                                </td>
                                                <td>
                                                    <img src="@Url.Content("~/Images/" +item.Anhbia)" width="50" height="50" />
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Hangsanxuat.Tenhang)
                                                </td>
                                                <td>
                                                    @Html.ActionLink("Sửa", "Edit", new { id = item.Masp })|
                                                    @Html.ActionLink("Chi tiết", "Details", new { id = item.Masp }) |
                                                    @Html.ActionLink("Xoá", "Delete", new { id = item.Masp })
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>

    <!-- End of Page Wrapper -->
    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>
    Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount

    @Html.PagedListPager(Model, page => Url.Action("DanhSach",
    new { page }))
    <!-- Kết thúc -->