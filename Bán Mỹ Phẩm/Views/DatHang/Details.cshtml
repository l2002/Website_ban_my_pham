@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model IEnumerable<Bán_Mỹ_Phẩm.Models.ChitietdonhangOnl>

<h2>Chi tiết đơn hàng</h2>
<table class="table">
    <tr>
        <th>
            Sản phẩm
        </th>
        <th>
            Số lượng
        </th>
        <th>
            Đơn giá / 1 sản phẩm
        </th>
        <th>
            Khuyến mãi
        </th>
        <th>
            Thành tiền
        </th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SanPham.TenSP)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Soluong)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Dongia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SanPham.KhuyenMai.TenKM)%
            </td>
            <td> @String.Format("{0:0,0}", item.SanPham.iKHuyenMai()) VNĐ </td>        
        </tr>
    }
</table>
